{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "excalidraw-svg",
    "version": "0.1.0",
    "identifier": "com.excalidraw-svg.app",
    "build": {
        "beforeDevCommand": "yarn dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "yarn build",
        "frontendDist": "../dist"
    },
    "plugins": {
        "cli": {
            "description": "file",
            "args": [
                {
                    "name": "file",
                    "index": 1,
                    "takesValue": true,
                    "required": true
                },{
                    "name": "autosave",
                    "conflictsWith": "rtsave"
                },{
                    "name": "rtsave",
                    "conflictsWith": "autosave"
                },
                {
                    "name": "bindings",
                    "takesValue": true,
                    "possibleValues": [ "mouse", "stylus" ]
                }
            ]
        }
    },
    "app": {
        "windows": [
            {
                "decorations": false,
                "title": "excalidraw-svg",
                "width": 800,
                "height": 600
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": false
    }
}
